<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bubtjobs.com.hungama.Activity.VideoPlayer"
    android:orientation="vertical"
    android:background="#dedad6"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/songName_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SongName"
            android:textSize="20sp"
            android:textColor="#b17979"
            />
        <TextView
            android:id="@+id/movieName_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MovieName"
            android:textSize="20sp"
            android:textColor="#b17979"
            />
    </LinearLayout>
    <!-- auto play -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".7"
        android:background="#747372"
        android:orientation="horizontal"
        android:gravity="right"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="AutoPlay"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:paddingRight="20dp"
            />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/autoPlay_switch"
            android:paddingRight="20dp"
            />

    </LinearLayout>
    <!-- video player -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:background="#dedad6"
        >
        <FrameLayout
            android:paddingTop="30dp"
            android:id="@+id/video_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
        <!--<VideoView-->
            <!--android:id="@+id/videoView"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="fill_parent"-->
            <!--android:layout_gravity="center"-->
            <!--/>-->
    </LinearLayout>

</LinearLayout>
